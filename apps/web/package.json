{
    "name": "web",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build && cp -r .next/static .next/standalone/apps/web/.next/static && cp -r public .next/standalone/apps/web/public",
        "start": "next start",
        "lint": "next lint",
        "docker": "cd ../.. && docker build -t mono-web -f ./apps/web/Dockerfile .",
        "test": "bun run test:unit && bun run coverage && bun run test:e2e",
        "test:unit": "vitest run",
        "coverage": "vitest run --coverage",
        "test:e2e": "playwright test"
    },
    "dependencies": {
        "next": "15.5.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.55.0",
        "@tailwindcss/postcss": "^4.1.12",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^24.3.0",
        "@types/react": "^19.1.11",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^5.0.1",
        "@vitest/ui": "3.2.4",
        "config": "workspace:*",
        "eslint": "^9.34.0",
        "jsdom": "^26.1.0",
        "tailwindcss": "^4.1.12",
        "typescript": "^5.9.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    }
}
