{
    "name": "api",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "test": "bun run test:unit && bun run coverage",
        "test:unit": "bun test && ",
        "coverage": "bun test --coverage",
        "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts",
        "docker": "cd ../.. && docker build -t mono-api -f ./apps/api/Dockerfile ."
    },
    "dependencies": {
        "@elysiajs/cors": "^1.3.3",
        "@elysiajs/opentelemetry": "1.3.1",
        "@elysiajs/swagger": "^1.3.1",
        "elysia": "1.3.18"
    },
    "devDependencies": {
        "@types/bun": "^1.2.20",
        "config": "workspace:*",
        "eslint": "^9.34.0"
    }
}
